model Usuario {
  id             String    @id
  nome           String
  email          String    @unique
  senha          String
  imagemDePerfil String
  cargo          String
  criadoEm       DateTime
  atualizadoEm   DateTime
  deletadoEm     DateTime?
}

model Imagem {
  id            String    @id
  url           String
  nome          String
  data          String
  visualizacoes Int
  endereco      String
  latitude      String
  longitude     String
  idDoUsuario   String
  criadoEm      DateTime
  atualizadoEm  DateTime
  deletadoEm    DateTime?
}

model Postagem {
  id            String    @id
  titulo        String
  descricao     String
  texto         String
  visualizacoes Int
  idDoUsuario   String
  criadoEm      DateTime
  atualizadoEm  DateTime
  deletadoEm    DateTime?
}

model Tag {
  id           String    @id
  nome         String
  idDoUsuario  String
  criadoEm     DateTime
  atualizadoEm DateTime
  deletadoEm   DateTime?
}
